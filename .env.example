PORT=3000
NODE_ENV=development

# PostgreSQL
POSTGRES_USER=chrono
POSTGRES_PASSWORD=chrono
POSTGRES_DB=chrono
POSTGRES_PORT=5432
DATABASE_URL=postgresql://chrono:chrono@db:5432/chrono

# Redis / BullMQ
REDIS_URL=redis://redis:6379
BULLMQ_PREFIX=chrono
BULLMQ_ATTEMPTS=3
BULLMQ_BACKOFF_MS=5000

# Scheduling defaults
DEFAULT_TIMEZONE=America/Sao_Paulo

# HTTP execution
HTTP_REQUEST_TIMEOUT_MS=10000
HTTP_MAX_RETRIES=3
